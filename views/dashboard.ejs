

<%- include('partials/header') %>
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-white mb-4"><i class="fas fa-tachometer-alt me-2"></i>Server Dashboard</h2>
        </div>
    </div>
  
    <div class="row">
        <% if (guilds && guilds.length > 0) { %>
            <% guilds.forEach(guild => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <% if (guild.icon) { %>
                                    <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" 
                                         alt="<%= guild.name %>" class="rounded-circle me-3" width="50" height="50">
                                <% } else { %>
                                    <div class="bg-secondary rounded-circle me-3 d-flex align-items-center justify-content-center" 
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-server text-white"></i>
                                    </div>
                                <% } %>
                                <div>
                                    <h5 class="card-title mb-0"><%= guild.name %></h5>
                                    <small class="text-muted">Server ID: <%= guild.id %></small>
                                </div>
                            </div>
                            <a href="/server/<%= guild.id %>" class="btn btn-primary">
                                <i class="fas fa-cog me-2"></i>Manage Server
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-robot fa-4x text-muted mb-4"></i>
                        <h4>No Servers Found</h4>
                        <p class="text-muted">Make sure the bot is added to your server and you have administrator permissions.</p>
                        <a href="https://discord.com/api/oauth2/authorize?client_id=<%= process.env.DISCORD_CLIENT_ID %>&permissions=8&scope=bot%20applications.commands" 
                           class="btn btn-primary" target="_blank">
                            <i class="fas fa-plus me-2"></i>Invite Bot to Server
                        </a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>